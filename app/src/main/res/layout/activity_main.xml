<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Pkg Name , Separate"
    android:layout_marginTop="10dp"
    android:id="@+id/pkgName"
    />

    <Button
        android:id="@+id/backup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Backup"
        app:layout_constraintTop_toBottomOf="@+id/pkgName"
        tools:layout_editor_absoluteX="3dp" />

    <Button
        android:id="@+id/fdetofbe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="FDE to FBE"
        app:layout_constraintTop_toBottomOf="@+id/backup"
        tools:layout_editor_absoluteX="3dp" />


    <Button
        android:id="@+id/restore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Restore"
        app:layout_constraintTop_toBottomOf="@+id/fdetofbe"
        tools:layout_editor_absoluteX="3dp" />


    <Button
        android:id="@+id/data_system"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Data System"
        app:layout_constraintTop_toBottomOf="@+id/restore"
        tools:layout_editor_absoluteX="3dp" />



</androidx.constraintlayout.widget.ConstraintLayout>